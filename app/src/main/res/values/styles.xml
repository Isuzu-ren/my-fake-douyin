<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- 等宽粗体黑色文字样式 -->
    <style name="MonospaceBoldText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="MonospaceBoldText_Shadow">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:shadowColor">@color/shadow_dark</item>
        <item name="android:shadowDx">@dimen/shadow_offset</item>
        <item name="android:shadowDy">@dimen/shadow_offset</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>
    </style>

    <!-- 圆形头像样式 -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TopRoundedBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TopRoundedBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/top_rounded_bottom_sheet</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="shapeAppearance">@style/TopRoundedShapeAppearance</item>
    </style>

    <style name="TopRoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>